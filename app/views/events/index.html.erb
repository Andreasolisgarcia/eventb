<p style="color: green"><%= notice %></p>

<h1>Events</h1>
<% if user_signed_in? %>
<p><%= link_to "New event", new_event_path %></p>
<% end %>

<div id="events">
  <% @events.each do |event| %>
    <p>
    <%= event.title %></p>
    <p>
    <%= event.location%></p>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>


